extends base.pug

block head 
    title Group 
    script(src="javascripts/getInfoGroup.js")

block content
    form(method="POST", action="/group/getinfo_process")
        select(id="memberSelect" onchange="memberSelectFunction()")
            option(id="memberDefaultOption" value="default" selected) 참가할 인원 수를 정해주세요
            option(class="option" value="2") 2명
            option(class="option" value="3") 3명
            option(calss="option" value="4") 4명
        input(type='text', required, name="STnumber", placeholder="학번")
        input(type='text', required, name="Name", placeholder="이름")
        input(type='text', required, name="Gender", placeholder="성별")
        input(type='text', required, name="Major", placeholder="전공")
        input(type='text', required, name="Field", placeholder="만날 지역")
        input(type='text', name="instagramID", placeholder="인스타그램 아이디")
        input(type='text', required, name="kakaoID", placeholder="카카오톡 아이디")
        input(type='text', required, name="secondStudent_STnumber", placeholder="두 번째 멤버 학번")
        input(type='text', required, name="secondStudent_Name", placeholder="두 번째 멤버 이름")
        input(type='text', name="secondStudent_instagramID", placeholder="두 번째 멤버 인스타그램 아이디")
        input(type='text', required, name="secondStudent_kakaoID", placeholder="두 번째 멤버 카카오톡 아이디")
        div(id="additionalMember")

        input(type="submit", value="제출")